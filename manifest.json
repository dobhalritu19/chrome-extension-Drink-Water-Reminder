{
  "manifest_version": 3,
  "name": "Drink Water Reminder",
  "version": "1.0",
  "description": "Reminds you to drink water every 1 minute.",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "alarms", "system.display",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}